{% extends 'base.html.twig' %}
{% block title %}Facture {{ facture.numero }}{% endblock %}
{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Facture {{ facture.numero }}</h1>
        <a href="{{ path('app_facture') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>
    <div class="card shadow p-4 mb-4">
        <h4 class="mb-3">Informations Facture</h4>
        <p><strong>Date :</strong> {{ facture.dateEmission|date('d/m/Y') }}</p>
        <p><strong>Total :</strong> {{ facture.total|number_format(2, ',', ' ') }} €</p>
        {% if facture.devis %}
            <p><strong>Devis associé :</strong> {{ facture.devis.numero }}</p>
        {% endif %}
    </div>
    <div class="card shadow p-4 mb-4">
        <h4 class="mb-3">Prestations</h4>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Description</th>
                    <th>Quantité</th>
                    <th>Prix Unitaire (€)</th>
                    <th>Sous-total (€)</th>
                </tr>
            </thead>
            <tbody>
            {% for prestation in facture.facturePrestations %}
                <tr>
                    <td>{{ prestation.prestation.nom ?? '---' }}</td>
                    <td>{{ prestation.quantity }}</td>
                    <td>{{ prestation.prestation.pu|number_format(2, ',', ' ') }}</td>
                    <td>{{ prestation.soustotal|number_format(2, ',', ' ') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center">Aucune prestation trouvée.</td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end"><strong>Total</strong></td>
                    <td><strong>{{ facture.total|number_format(2, ',', ' ') }} €</strong></td>
                </tr>
            </tfoot>
        </table>
    </div>
    <div class="d-flex gap-2">
        {# Bouton impression #}
        {# <button class="btn btn-success" onclick="window.print()">Imprimer</button> #}
        {# Si tu veux un export PDF (via route) #}
        <a href="{{ path('facture_pdf', {'id': facture.id}) }}" class="btn btn-primary">Exporter en PDF</a>
    </div>
</div>
<style>
@media print {
    .btn, .d-flex { display: none; }
    body { font-size: 14px; }
    table { width: 100%; border-collapse: collapse; }
    th, td { border: 1px solid #000; padding: 8px; }
}
</style>
{% endblock %}
