{% extends 'base.html.twig' %}
{% block title %}{{'Facture'|trans}} {{ facture.numero }}{% endblock %}
{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>{{'Facture'|trans}} {{ facture.numero }}</h1>
        <a href="{{ path('app_facture') }}" class="btn btn-secondary">{{'Retour à la liste'|trans}}</a>
    </div>
    <div class="card shadow p-4 mb-4">
        <h4 class="mb-3">{{'Informations Facture'|trans}}</h4>
        <p><strong>Date :</strong> {{ facture.dateEmission|date('d/m/Y') }}</p>
        <!-- Ajout du nom et prénom du client via les relations -->
        <p><strong>{{'Client'|trans}} :</strong> {{ facture.devis.demande.prenom }} {{ facture.devis.demande.nom }}</p>
        <p><strong>{{'Total'|trans}} :</strong> {{ facture.total|number_format(2, ',', ' ') }} €</p>
        {% if facture.devis %}
            <p><strong>{{'Devis associé'|trans}} :</strong> {{ facture.devis.numero }}</p>
        {% endif %}
    </div>
    <div class="card shadow p-4 mb-4">
        <h4 class="mb-3">{{'Prestations'|trans}}</h4>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>{{'Description'|trans}}</th>
                    <th>{{'Quantité'|trans}}</th>
                    <th>{{'Prix Unitaire (€)'|trans}}</th>
                    <th>{{'Sous-total (€)'|trans}}</th>
                </tr>
            </thead>
            <tbody>
            {% for prestation in facture.facturePrestations %}
                <tr>
                    <td>{{ prestation.prestation.nom ?? '---' }}</td>
                    <td>{{ prestation.quantity }}</td>
                    <td>{{ prestation.prestation.pu|number_format(2, ',', ' ') }}</td>
                    <td>{{ prestation.soustotal|number_format(2, ',', ' ') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center">{{'Aucune prestation trouvée'|trans}}.</td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end"><strong>{{'Total'|trans}}</strong></td>
                    <td><strong>{{ facture.total|number_format(2, ',', ' ') }} €</strong></td>
                </tr>
            </tfoot>
        </table>
    </div>
    <div class="d-flex gap-2">
        {# Bouton impression #}
        {# <button class="btn btn-success" onclick="window.print()">Imprimer</button> #}
        {# Si tu veux un export PDF (via route) #}
        <a href="{{ path('facture_pdf', {'id': facture.id}) }}" class="btn btn-primary">{{'Exporter en PDF'|trans}}</a>
    </div>
</div>
<style>
@media print {
    .btn, .d-flex { display: none; }
    body { font-size: 14px; }
    table { width: 100%; border-collapse: collapse; }
    th, td { border: 1px solid #000; padding: 8px; }
}
</style>
{% endblock %}
