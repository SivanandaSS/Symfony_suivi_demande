{% extends 'base.html.twig' %}

{% block title %}{{'Liste des Factures'|trans}}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Liste des Factures</h1>

    {# Tableau des factures #}
    <table class="table table-dark table-striped">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Numéro</th>
                <th>Date</th>
                <th>Total (€)</th>
                <th>Devis associé</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td>{{ facture.id }}</td>
                <td>{{ facture.numero }}</td>
                <td>{{ facture.dateEmission|date('d/m/Y') }}</td>
                <td>{{ facture.total|number_format(2, ',', ' ') }} €</td>
                <td>
                    {% if facture.devis %}
                        {{ facture.devis.numero }}
                    {% else %}
                        <span class="text-muted">Aucun</span>
                    {% endif %}
                </td>
                <td>
                    {{facture.paiement }}
                </td>
                <td>
                    <a href="{{ path('facture_show', {'id': facture.id}) }}" class="btn btn-primary">Voir</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="text-center">Aucune facture trouvée.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
