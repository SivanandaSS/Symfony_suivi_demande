{% extends 'base.html.twig' %}

{% block title %}Facture {{ facture.numero }}{% endblock %}

{% block stylesheets %}
    <style>
        /* Styles de base non affectés par .invoice-container */
        body {
            font-family: 'Helvetica Neue', 'Helvetica', Arial, sans-serif;
            font-size: 14px;
            color: #333;
            line-height: 1.6;
            margin: 0;
            padding: 20px;
        }

        /* Le conteneur de la facture lui-même */
        .invoice-container {
            max-width: 800px;
            margin: 20px auto;
            padding: 30px;
            border: 1px solid #eee;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
            background-color: #fff;
        }

        /* Règles CSS ciblées avec .invoice-container pour une plus haute spécificité */
        .invoice-container .header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 40px;
        }

        .invoice-container .header .company-info {
            line-height: 1.4;
        }

        .invoice-container .header .company-info h1 {
            font-size: 24px;
            margin: 0 0 5px 0;
            color: #007bff;
        }

        .invoice-container .header .invoice-details {
            text-align: right;
            line-height: 1.4;
        }

        .invoice-container .header .invoice-details h2 {
            font-size: 20px;
            margin: 0 0 5px 0;
            color: #555;
        }

        .invoice-container .header .invoice-details p {
            margin: 0;
        }

        .invoice-container .customer-info {
            margin-bottom: 30px;
        }

        .invoice-container .customer-info p {
            margin: 0;
        }

        .invoice-container .section-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 15px;
            border-bottom: 2px solid #007bff;
            padding-bottom: 5px;
        }

        .invoice-container table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .invoice-container table th, .invoice-container table td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }

        .invoice-container table thead th {
            background-color: #f8f9fa;
            color: #495057;
            font-weight: bold;
            text-transform: uppercase;
        }

        .invoice-container table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .invoice-container .totals-table {
            width: 50%;
            margin-left: auto;
            margin-top: 20px;
        }

        .invoice-container .totals-table th, .invoice-container .totals-table td {
            border: none;
            padding: 8px 12px;
            text-align: right;
        }

        .invoice-container .totals-table tr.total-row th, .invoice-container .totals-table tr.total-row td {
            background-color: #007bff;
            color: #fff;
            font-size: 16px;
            font-weight: bold;
        }

        .invoice-container .footer {
            margin-top: 50px;
            text-align: center;
            font-size: 12px;
            color: #777;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="invoice-container">
        <div class="header">
        <img="{{ asset('public/img/ordi.webp') }}" alt="Logo de l'entreprise" style="height: 80px;">
            <div class="company-info">
                <h1><img src="{{ logo_url }}" style="width:50px; height:auto;" alt="Logo" /> Pdev </h1>
                <p>Adresse de l'Entreprise<br>
                32 rue des tulipes<br>
                85092 Fontenay-le-comte<br>
                Tél: 03.25.25.11.63<br>
                Email: contact@entreprise.com</p>
            </div>
            <div class="invoice-details">
                <h2>Facture</h2>
                <p><strong>Numéro :</strong> {{ facture.numero }}</p>
                <p><strong>Date d'émission :</strong> {{ facture.dateEmission|date('d/m/Y') }}</p>
                <p><strong>IBAN :</strong> FR76 3000 6000 0112 3456 7890 189</p>
            </div>
        </div>

        <div class="customer-info">
            <p class="section-title">Facturé à</p>
            <p><strong>{{ facture.devis.demande.prenom }} {{ facture.devis.demande.nom }}</strong></p>
        </div>

        <p class="section-title">Détails des prestations</p>
        <table>
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Quantité</th>
                    <th>Prix Unitaire (€)</th>
                    <th>Sous-total (€)</th>
                </tr>
            </thead>
            <tbody>
            {% for prestation in facture.facturePrestations %}
                <tr>
                    <td>{{ prestation.prestation.nom ?? '---' }}</td>
                    <td>{{ prestation.quantity }}</td>
                    <td>{{ prestation.prestation.pu|number_format(2, ',', ' ') }}</td>
                    <td>{{ prestation.soustotal|number_format(2, ',', ' ') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center">Aucune prestation trouvée.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <table class="totals-table">
            <tbody>
                <tr class="total-row">
                    <th>Total :</th>
                    <td>{{ facture.total|number_format(2, ',', ' ') }} €</td>
                </tr>
            </tbody>
        </table>

        <div class="footer">
            <p>Merci pour votre confiance !</p>
            <p>SIRET: 123 456 789 00012 - RCS Ville - TVA Intracommunautaire: FR00 123456789</p>
        </div>
    </div>
{% endblock %}